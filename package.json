{
  "name": "enigmabox",
  "version": "0.1.0",
  "private": true,
  "description": "EnigmaBox - Puzzle Hunt 密码工具箱（Electron + Vue 3 + TypeScript）",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron:build": "tsc -p tsconfig.node.json --watch --preserveWatchOutput",
    "dev:electron:run": "wait-on dist-electron/main/index.js http://localhost:5173 && set VITE_DEV_SERVER_URL=http://localhost:5173 && electron .",
    "dev": "concurrently -k -n renderer,tsc,electron \"npm:dev:renderer\" \"npm:dev:electron:build\" \"npm:dev:electron:run\"",
    "typecheck": "vue-tsc --noEmit && tsc -p tsconfig.node.json --noEmit",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.node.json",
    "build": "npm run build:renderer && npm run build:electron",
    "dist": "npm run build && electron-builder -w",
    "preview": "vite preview"
  },
  "dependencies": {
    "vue": "^3.5.0",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0",
    "postcss": "^8.5.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vue-tsc": "^2.2.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.moria.enigmabox",
    "productName": "EnigmaBox",
    "directories": {
      "output": "dist-installers"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
